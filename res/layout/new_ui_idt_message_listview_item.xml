<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/mm_listitem"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/head"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:src="@drawable/new_ui_message_person_image" />

    <ImageView
        android:id="@+id/idt_exist_new_message_image"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="2dp"
        android:layout_alignTop="@+id/head"
        android:layout_alignRight="@+id/head"
        android:src="@drawable/new_ui_message_red_dot_image" />

    <TextView
        android:id="@+id/idt_message_listview_item_phone_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/head"
        android:padding="7dp"
        android:text=""
        android:textColor="#000" />

    <TextView
        android:id="@+id/idt_message_listview_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="7dp"
        android:text=""
        android:textColor="#666" />

    <TextView
        android:id="@+id/idt_message_listview_item_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/head"
        android:padding="7dp"
        android:text=""
        android:textColor="#666" />

</RelativeLayout>
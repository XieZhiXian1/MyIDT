<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:minHeight="50dp" >

    <ImageView
        android:id="@+id/buddy_listview_child_avatar"
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:src="@drawable/new_ui_default_user_not_normal_image" />

    <TextView
        android:id="@+id/buddy_listview_child_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/buddy_listview_child_avatar"
        android:text="用户名一"
        android:textColor="#ff000000"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/idt_to_user_message_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="55dp"
        android:clickable="true"
        android:focusable="false"
        android:src="@drawable/new_ui_idt_to_group_message_image" />

</RelativeLayout>